    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.username">atom</property>
    <property name="connection.password">atom</property>
    <property name="hibernate.hbm2ddl.auto">create-drop</property>
<!--      <mapping resource="/src/main/java/ru/atom/chat/MessageEntity.hbm.xml"/>-->
      <mapping class="ru.atom.chat.MessageEntity"/>
<!--      <mapping resource="/src/main/java/ru/atom/chat/UserEntity.hbm.xml"/>-->
      <mapping class="ru.atom.chat.UserEntity"/>
